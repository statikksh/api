    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "exclude": ["node_modules", "dist", "__tests__"]
}
